    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Cli",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "debugAdapter": "dlv-dap",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cli/mizu.go",
            "args": [
                "tap",
                "-n",
                "sock-shop"
            ]
        },
        {
            "preLaunchTask": [
                "build-agent",
                "agent-tapper"
            ],
            "name": "Debug API Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "debugAdapter": "dlv-dap",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/agent/main.go",
            "args": [
                "--debug",
                "--api-server"
            ]
        },
        {
            "name": "Debug Tapper",
            "type": "go",
            "debugAdapter": "legacy",
            "request": "attach",
            "mode": "remote",
            "port": 2345,

        },
    ]
}