    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Cli",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "debugAdapter": "dlv-dap",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cli/mizu.go",
            "args": [
                "tap", 
                "-n", 
                "sock-shop"
            ]
        },
        {
            "preLaunchTask": "build-agent",
            "name": "Debug API Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "debugAdapter": "dlv-dap",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/agent/main.go",
            "args": [
                "--debug",
                "--api-server"
            ]
        },
        {
            "preLaunchTask": "clean-agent",
            "name": "Debug Agent Local",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "debugAdapter": "dlv-dap",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/agent/main.go",
            "args": [
                "--debug",
                "-i", 
                "any", 
                "--tap", 
                "--api-server-address",
                "ws://localhost:8899/wsTapper"
            ],
            "env": {
                "DEBUG_AS_ROOT": "true",
                "GOGC": 12800,
                "NODE_NAME": "dev"
            },
        },
        {
            "name": "Debug Agent Remote",
            "type": "go",
            "debugAdapter": "dlv-dap",
            "request": "attach",
            "mode": "remote",
            "port": 40000
        }
    ]
}